<%# Rendering Navbar %>
<%= render "shared/navbar" %>

<%# Basic Hero/Jumbo/Header %>
<div class="container">
  <div class="row">
    <div class="jumbotron mt-2 p-4">
      <h2>Botanical Bazaar</h2>
      <p>Plant rental specialists</p>
    </div>
  </div>
</div>


<%# Main Card %>
<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-lg-3 row-cols-xl-3 g-4">
  <% @plants.each do |plant| %>.
  <%= link_to plant_path(plant) do %>
    <div class="col p-0">
      <div class="card home-card-img">
        <span><%= cl_image_tag plant.photos.first.key, class: "card-img"%></span>
        <div class="card-body">
          <h5 class="card-title"><%= plant.species  %></h5>
          <p class="card-text"><%= plant.description %></p>
        </div>
        <div class="card-footer">
          <small class="text-muted">5* Reviews</small>
          <small class="text-muted">Price: Â£<%= plant.price %></small>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>
</div>
</div>


<%# Rendering Navbar %>
<%= render "shared/footer" %>
