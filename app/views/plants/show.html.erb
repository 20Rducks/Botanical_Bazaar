<%# Basic Hero/Jumbo/Header %>
<div class="container">
  <div class="row">
    <div class="jumbotron mt-2">
      <h2><%= @plant.species %></h2>
      <p><%= @plant.description %></p>
    </div>
  </div>
</div>

<%# Main Card %>
<div class="container">

  <div class="row home-card">
    <div class="col-sm-12 col-md-5 col-lg-5 flex-fill pl-4 pt-2">
      <div class="home-card-img py-4 pl-4 align-middle">
        <img class="card-img-top" src="<%= cl_image_path @plant.photos[0].key%>">
        <div class="card-body text-center">
          <h5 class="card-title"><%= @plant.species %></h5>
          <p class="card-text"><%= @plant.description %></p>
        </div>
      </div>
    </div>

    <div class="col-sm-12 col-md-7 col-lg-7">
      <div class="row row-cols-1 row-cols-md-2 g-4 p-4">
      <% @plant.photos.each_with_index do |photo, index| %>
      <% next if index == 0 %>
        <div class="col">
          <div class="card">
            <span><img class="card-img-top card-img-show" alt="plant image" src="<%= cl_image_path photo.key%>"></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container mt-4 mr-3">
  <div class="row">

    <%# Info Card %>
    <div class="col-sm-12 col-md-6 col-lg-6 info-card px-3">
      <div class="card home-card-img my-1 align-middle p-2 my-3">
        <div class="card-body">
          <div>
            <i class="fa-solid fa-user float-end mr-2 p-2 bg-secondary rounded-circle"></i>
          </div>
          <div>
            <h5 class="card-title">Species Name: <%= @plant.species %></h5>
            <p class="card-text pr-5">Owned by: User-Name </p>
          </div>
        </div>
      </div>
      <div class="card home-card-img my-1 align-middle p-2 my-3">
        <div class="card-body">
          <h5 class="card-title">Plant Description</h5>
          <p class="card-text"><%= @plant.description %></p>
        </div>
      </div>
      <div class="card home-card-img my-1 align-middle p-2 my-3">
        <div class="card-body">
          <h5 class="card-title">Extra Information</h5>
          <p class="card-text">This plant needs a lot of care, don't forget to walk it daily</p>
        </div>
      </div>
    </div>

      <%# Spacer for mid section %>
      <div class="col-sm-0 col-md-2 col-lg-2 d-flex">
      </div>

      <%# Payment Card %>
      <div class="col-sm-12 col-md-4 col-lg-4 d-flex payment-card">
        <p>Hello</p>
      </div>
    </div>
  </div>
</div>

