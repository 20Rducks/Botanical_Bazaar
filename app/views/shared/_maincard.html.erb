<%# Main Card %>
<div class="container">

  <div class="row home-card">
    <div class="col-sm-12 col-md-5 col-lg-5 flex-fill pl-4 pt-2">
      <div class="py-4 pl-4 align-middle">
        <%= cl_image_tag @plant.photos[0].key, class: "card-img-top" %>
        <div class="card-body text-center">
          <h5 class="card-title"><%= @plant.species %></h5>
          <p class="card-text"><%= @plant.description %></p>
        </div>
      </div>
    </div>

    <div class="col-sm-12 col-md-7 col-lg-7">
      <div class="row inner-cards row-cols-1 row-cols-md-2 g-4 p-4">
      <% @plant.photos.each_with_index do |photo, index| %>
      <% next if index == 0 %>
        <div class="col">
          <div class="card">
            <span><%= cl_image_tag photo.key, class: "card-img-top home-card-img"%></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
