<%# Basic Hero/Jumbo/Header %>
<div class="container">
  <div class="row">
    <div class="jumbotron mt-2">
      <h2><%= @booking.plant.species %></h2>
      <p><%= @booking.plant.description %></p>
    </div>
  </div>
</div>


